# Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://goodwill-foundation.com
NEXT_PUBLIC_SITE_NAME=مؤسسة طريق الخير للتشغيل والصيانة

# Contact Information
NEXT_PUBLIC_PHONE=+966XXXXXXXXX
NEXT_PUBLIC_EMAIL=Goodwill.laundries@gmail.com
NEXT_PUBLIC_WHATSAPP=966XXXXXXXXX

# Social Media
NEXT_PUBLIC_FACEBOOK_URL=https://facebook.com/your-page
NEXT_PUBLIC_INSTAGRAM_URL=https://instagram.com/your-profile
NEXT_PUBLIC_TWITTER_URL=https://twitter.com/your-profile

# Google Services
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=YOUR_GOOGLE_MAPS_API_KEY

# Form Submission (if using a service like Formspree)
NEXT_PUBLIC_FORM_ENDPOINT=https://formspree.io/f/your-form-id

# Upstash Redis (for visitor counter - OPTIONAL)
# If not configured, the counter will use a local JSON file (data/counter.json)
# Sign up at https://upstash.com to get these credentials
UPSTASH_REDIS_REST_URL=https://your-redis-instance.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-redis-token-here

# Other Services
# Add any other API keys or service credentials here
